# =============================================================
#         UniPlateTracker Environment Configuration
# =============================================================

# -------------------------------------------------------------
# Core Application Settings
# -------------------------------------------------------------
# Set the primary region for the application.
# Options: "UK" or "INTERNATIONAL"
# - UK: Enables DVLA integration and UK-style license plates.
# - INTERNATIONAL: Disables DVLA features by default and uses a generic plate style.
APP_REGION="UK"

# For INTERNATIONAL mode only. Set to "true" to enable a placeholder
# for your own country's vehicle data API.
# This will show the vehicle details columns in the UI.
ENABLE_INTERNATIONAL_API="false"

# -------------------------------------------------------------
# Database
# -------------------------------------------------------------
POSTGRES_URL="postgresql://postgres:password@localhost:5432/uniplatetracker"

# -------------------------------------------------------------
# Webhook Worker Service
# -------------------------------------------------------------
WORKER_PORT="4000"

# --- UK Specific (only used if APP_REGION is "UK") ---
DVLA_API_KEY="YOUR_DVLA_API_KEY_HERE"

# -------------------------------------------------------------
# Next.js Frontend Application
# -------------------------------------------------------------
# The canonical URL of your Next.js application.
NEXTAUTH_URL="http://YOUR_SERVER_IP:3000"

# --- Admin Authentication ---
# A strong, 32-character secret for encrypting session cookies.
SESSION_SECRET="YOUR_SUPER_SECRET_PASSWORD_MUST_BE_AT_LEAST_32_CHARACTERS_LONG"

# --- Video Capture Configuration ---
# Set to "true" to enable the video recording feature.
ENABLE_VIDEO_CAPTURE="false"
# The full RTSP or RTSPS URL of your UniFi Protect camera.
RTSP_URL="rtsps://..."
# The absolute path on the server where final 10-second video clips will be saved.
VIDEO_CAPTURE_PATH="/opt/captures"
# How many seconds of video to include *before* the detection event.
VIDEO_PREBUFFER_SECONDS="5"
# How many seconds of video to include *after* the detection event.
VIDEO_POSTBUFFER_SECONDS="10"